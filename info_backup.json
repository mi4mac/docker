{
    "name": "docker",
    "version": "1.0.0",
    "label": "Docker",
    "description": "FortiSOAR connector for Docker Engine API.",
    "publisher": "mibe",
    "icon_small_name": "images/connector_logo_small.png",
    "icon_large_name": "images/connector_logo_large.png",
    "category": [
        "Container Services"
    ],
    "configuration": {
        "fields": [
            {
                "title": "Server Address",
                "type": "text",
                "name": "server_address",
                "required": true,
                "visible": true,
                "editable": true
            },
            {
                "title": "Port",
                "type": "text",
                "name": "port",
                "required": true,
                "visible": true,
                "editable": true,
                "value": "2376"
            },
            {
                "title": "Protocol",
                "type": "select",
                "name": "protocol",
                "required": true,
                "visible": true,
                "editable": true,
                "options": [
                    "HTTP",
                    "HTTPS"
                ],
                "value": "HTTPS"
            },
            {
                "title": "Username",
                "type": "text",
                "name": "username",
                "required": false,
                "visible": true,
                "editable": true
            },
            {
                "title": "Password",
                "type": "password",
                "name": "password",
                "required": false,
                "visible": true,
                "editable": true
            },
            {
                "title": "Access Token",
                "type": "password",
                "name": "access_token",
                "required": false,
                "visible": true,
                "editable": true
            },
            {
                "title": "Verify SSL",
                "type": "checkbox",
                "name": "verify_ssl",
                "required": false,
                "visible": true,
                "editable": true,
                "value": true
            }
        ]
    },
    "operations": [
        {
            "operation": "get_version",
            "title": "Get Version",
            "description": "Get Docker Engine version",
            "enabled": true
        },
        {
            "operation": "get_info",
            "title": "Get Info",
            "description": "Get Docker system info",
            "enabled": true
        },
        {
            "operation": "list_containers",
            "title": "List Containers",
            "description": "List Docker containers",
            "enabled": true,
            "parameters": [
                {
                    "title": "All",
                    "type": "checkbox",
                    "name": "all",
                    "required": false,
                    "visible": true,
                    "editable": true,
                    "value": false
                }
            ]
        }
    ]
}
